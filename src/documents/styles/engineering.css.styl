
body {
  background: url(/images/grid-18px-masked.png) repeat-x;
  padding-top: 0;
}

a {
  color: #399DD8;
}

.container {
  width: 1000px;
  margin: 0 auto;
}

.navbar {  
  .navbar-inner {
    border-radius: 0;
    background: #fff;
    padding-top: 5px;
    padding-bottom: 5px;
  }
  
  .container {
    width: 1000px;
  }
  
  .nav {
    margin: 4px 0 0;
    
    > li {
      > a {
        margin: 0 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 6px 12px;
      }
    }
  }
}

#yp-brand {
  float: left;
  padding: 0;
  margin-left: 0;
  
  img {
    width: 46px;
  }
  
  span {
    color: #333;
    font-size: 25px;
    font-weight: normal;
    position: relative;
    left: 14px;
    top: 3px;
  }
}

#main-content {
  width: 1000px;
  margin: 30px auto;
}

.blog-post {
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 50px;
  /*box-shadow: 0 1px 3px rgba(0, 0, 0, .2);*/
  
  header {
    padding: 22px 30px;
    border-bottom: 1px dashed #ccc;
    
    .title {
      display: block;
      font-size: 30px;
      color: #ECAD02;
      color: #FBC21A;
      margin-bottom: 30px;
    }
    
    .author {
      width: 100px;
      overflow: hidden;
      text-align: right;
      
      img {
        vertical-align: middle;
        width: 16px;
        border-radius: 5px;
        margin:0 4px 0 8px;
      }
    }
    
    time {
      font-size: 12px;
      display: block;
    }
  }
  
  .body {
    padding: 20px 30px;
    line-height: 20px;
    
    img {
      display: block;
      max-width: 80%;
      margin: 0 auto;
    }
  }
}

.image-grid {
  img {
    margin: 4px 3px;
    background: #fff;
    padding: 2px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, .4);
  }
}

#hero {
  border-radius: 5px;
  margin: 0 auto;
  width: 1000px;
  background: #fff;
  height: 200px;
  overflow: hidden;
  position: relative;

  img {
    display: block;
  }
  
  .caption {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, .5);
    padding: 5px;
    color: #fff;
    text-align: right;
  }
}

#yp-life {
  float: right;
  h3 {
    font-weight: normal;
    line-height: normal;
    margin: 0 0 20px;
  }
  
  .image-grid {
    margin-bottom: 30px;
    img {
      width: 55px;
    }
  }
}

#blog {
  .span9 {
    width: 73%;
  }
}